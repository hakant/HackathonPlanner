{
    "bundles": {
        "dist/app-build": {
            "includes": [
                "[*.js]",
                "[*/**/*.js]",
                "*.html!text",
                "*.css!text"
            ],
            "options": {
                "inject": true,
                "minify": true
            }
        },
        "dist/aurelia": {
            "includes": [
                "aurelia-framework",
                "aurelia-bootstrapper",
                "aurelia-fetch-client",
                "aurelia-router",
                "aurelia-animator-css",
                "aurelia-templating-binding",
                "aurelia-templating-resources",
                "aurelia-templating-router",
                "aurelia-loader-default",
                "aurelia-history-browser",
                "aurelia-logging-console",
                "aurelia-validation"
            ],
            "options": {
                "inject": true,
                "minify": true,
                "rev": false
            }
        },
        "dist/thirdparty": {
            "includes": [
                "bootstrap",
                "bootstrap/css/bootstrap.css!text",
                "lodash",
                "font-awesome",
                "fetch",
                "showdown",
                "jquery",
                "jquery.finger"
            ],
            "options": {
                "inject": true,
                "minify": true,
                "rev": false
            }
        }
    }
}